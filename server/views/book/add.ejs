<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Add Details</h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="name"
                    placeholder="Enter The name of the person"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Username</label>
                    <input type="text" class="form-control"
                    id="username"
                    placeholder="Enter the Username"
                    name="username" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">email</label>
                    <input type="text" class="form-control"
                    id="email"
                    placeholder="Enter their email"
                    name="email" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Number</label>
                    <textarea type="text" class="form-control"
                    id="number"
                    placeholder="Enter their contact number"
                    name="number" required></textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>

    </div>
</div>



